<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_adv"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#FFFBFB"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">


    <TextView
        android:id="@+id/advNameBox"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Adventure"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/advPlanBox"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="244dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text="Plan is to go surfing"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/advDateBox"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="date"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/advVehBox"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/advJoinBtn"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:onClick="joinAdventure"
            android:text="join" />

        <Button
            android:id="@+id/advOrganizerBox"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:text="Organizer" />
    </LinearLayout>


</LinearLayout>


